                  <Phone className="w-5 h-5 text-cyan-400" />
                  <span className="text-gray-300">555-BOUNCE (555-268-6235)</span>
                </div>
                <div className="flex items-center space-x-3">
                  <Mail className="w-5 h-5 text-orange-400" />
                  <span className="text-gray-300">info@bouncebrosco.com</span>
                </div>
                <div className="flex items-center space-x-3">
                  <MapPin className="w-5 h-5 text-pink-400" />
                  <span className="text-gray-300">Hamilton & Boone County, IN</span>
                </div>
              </div>
            </div>

            {/* Service Areas */}
            <div>
              <h3 className="text-lg font-semibold mb-6 text-orange-400">Service Areas</h3>
              <ul className="text-gray-400 space-y-2">
                <li>‚Ä¢ Carmel</li>
                <li>‚Ä¢ Fishers</li>
