import React, { useState } from "react";
import { ContactInquiry } from "@/entities/ContactInquiry";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Textarea } from "@/components/ui/textarea";
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from "@/components/ui/select";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { 
  Phone, 
  Mail, 
  MapPin, 
  Clock, 
  Send,
  CheckCircle,
  Star,
  Heart,
  Plus,
  X
} from "lucide-react";
import { Alert, AlertDescription } from "@/components/ui/alert";

export default function Contact() {
  const [formData, setFormData] = useState({
    name: "",
    email: "",
    phone: "",
    event_dates: [],
    event_type: "",
    package_interest: "",
    location: "",
    message: "",
    contact_preference: "either"
  });
  
  const [isSubmitting, setIsSubmitting] = useState(false);
  const [submitted, setSubmitted] = useState(false);
  const [newDate, setNewDate] = useState("");

  const handleInputChange = (field, value) => {
    setFormData(prev => ({
      ...prev,
      [field]: value
    }));
  };

  const addDate = () => {
    if (newDate && !formData.event_dates.includes(newDate)) {
      setFormData(prev => ({
        ...prev,
        event_dates: [...prev.event_dates, newDate]
      }));
      setNewDate("");
    }
  };

  const removeDate = (dateToRemove) => {
    setFormData(prev => ({
      ...prev,
      event_dates: prev.event_dates.filter(date => date !== dateToRemove)
    }));
  };

  const handleSubmit = async (e) => {
    e.preventDefault();
    setIsSubmitting(true);
    
    try {
      // Convert dates array to string for storage
      const submitData = {
        ...formData,
        event_date: formData.event_dates.join(", ")
      };
      await ContactInquiry.create(submitData);
      setSubmitted(true);
      setFormData({
        name: "",
        email: "",
        phone: "",
        event_dates: [],
        event_type: "",
        package_interest: "",
        location: "",
        message: "",
        contact_preference: "either"
      });
    } catch (error) {
      console.error("Error submitting form:", error);
    }
    
    setIsSubmitting(false);
  };

  if (submitted) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-gray-900 to-black flex items-center justify-center px-4">
        <Card className="max-w-2xl w-full text-center shadow-2xl border border-gray-800 bg-gradient-to-br from-gray-900 to-black">
          <CardContent className="p-12">
            <div className="w-20 h-20 bg-gradient-to-r from-green-500 to-cyan-500 rounded-full flex items-center justify-center mx-auto mb-6">
              <CheckCircle className="w-10 h-10 text-white" />
            </div>
            <h2 className="text-3xl font-bold text-white mb-4">Thank You!</h2>
            <p className="text-lg text-gray-400 mb-8">
              We've received your inquiry and will get back to you within 2 hours during business hours. 
              Get ready for an amazing event!
            </p>
            <div className="space-y-3">
              <p className="font-semibold text-white">Need immediate assistance?</p>
              <Button className="bg-gradient-to-r from-cyan-500 via-pink-500 to-orange-500 text-white px-8 py-3 rounded-full hover:shadow-xl transition-all duration-300">
                <Phone className="mr-2 w-5 h-5" />
                Call 555-BOUNCE
              </Button>
            </div>
          </CardContent>
        </Card>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-gray-900 to-black">
      {/* Header */}
      <section className="pt-20 pb-16 bg-gradient-to-r from-cyan-500 via-pink-500 to-orange-500 text-white relative overflow-hidden">
        <div className="absolute inset-0 bg-black/20"></div>
        <div className="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <h1 className="text-4xl md:text-6xl font-bold mb-6">
            Let's Plan Your Perfect Event
          </h1>
          <p className="text-xl md:text-2xl opacity-90 max-w-3xl mx-auto leading-relaxed">
            Ready to bring joy and excitement to your celebration? We're here to make it happen!
          </p>
        </div>
      </section>

      <div className="py-16 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div className="grid grid-cols-1 lg:grid-cols-2 gap-12">
          {/* Contact Form */}
          <div>
            <Card className="shadow-2xl border border-gray-800 bg-gradient-to-br from-gray-900 to-black">
              <CardHeader className="text-center pb-8">
                <CardTitle className="text-2xl md:text-3xl font-bold text-white">
                  Get Your <span className="bg-gradient-to-r from-pink-500 to-orange-500 bg-clip-text text-transparent">Free Quote</span>
                </CardTitle>
                <p className="text-gray-400 mt-2">Fill out the form below and we'll get back to you within 2 hours!</p>
              </CardHeader>
              
              <CardContent className="px-8 pb-8">
                <form onSubmit={handleSubmit} className="space-y-6">
                  <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div className="space-y-2">
                      <Label htmlFor="name" className="font-semibold text-gray-300">Full Name *</Label>
                      <Input
                        id="name"
                        type="text"
                        value={formData.name}
                        onChange={(e) => handleInputChange('name', e.target.value)}
                        className="border-2 border-gray-700 bg-gray-800 text-white focus:border-cyan-500 rounded-lg"
                        required
                      />
                    </div>
                    <div className="space-y-2">
                      <Label htmlFor="phone" className="font-semibold text-gray-300">Phone Number *</Label>
                      <Input
                        id="phone"
                        type="tel"
                        value={formData.phone}
                        onChange={(e) => handleInputChange('phone', e.target.value)}
                        className="border-2 border-gray-700 bg-gray-800 text-white focus:border-cyan-500 rounded-lg"
                        required
                      />
                    </div>
                  </div>

                  <div className="space-y-2">
                    <Label htmlFor="email" className="font-semibold text-gray-300">Email Address *</Label>
                    <Input
                      id="email"
                      type="email"
                      value={formData.email}
                      onChange={(e) => handleInputChange('email', e.target.value)}
                      className="border-2 border-gray-700 bg-gray-800 text-white focus:border-cyan-500 rounded-lg"
                      required
                    />
                  </div>

                  {/* Multiple Event Dates */}
                  <div className="space-y-2">
                    <Label className="font-semibold text-gray-300">Event Dates</Label>
                    <div className="flex gap-2">
                      <Input
                        type="date"
                        value={newDate}
                        onChange={(e) => setNewDate(e.target.value)}
                        className="border-2 border-gray-700 bg-gray-800 text-white focus:border-cyan-500 rounded-lg flex-1"
                      />
                      <Button
                        type="button"
                        onClick={addDate}
                        className="bg-gradient-to-r from-cyan-500 to-pink-500 hover:shadow-lg px-4"
                      >
                        <Plus className="w-4 h-4" />
                      </Button>
                    </div>
                    {formData.event_dates.length > 0 && (
                      <div className="flex flex-wrap gap-2 mt-2">
                        {formData.event_dates.map((date, index) => (
                          <div key={index} className="bg-gradient-to-r from-cyan-500/20 to-pink-500/20 border border-cyan-600 rounded-full px-3 py-1 flex items-center gap-2">
                            <span className="text-sm text-white">{new Date(date).toLocaleDateString()}</span>
                            <button
                              type="button"
                              onClick={() => removeDate(date)}
                              className="text-white hover:text-red-400 transition-colors"
                            >
                              <X className="w-3 h-3" />
                            </button>
                          </div>
                        ))}
                      </div>
                    )}
                  </div>

                  <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div className="space-y-2">
                      <Label htmlFor="event_type" className="font-semibold text-gray-300">Event Type</Label>
                      <Select value={formData.event_type} onValueChange={(value) => handleInputChange('event_type', value)}>
                        <SelectTrigger className="border-2 border-gray-700 bg-gray-800 text-white focus:border-cyan-500 rounded-lg">
                          <SelectValue placeholder="Select event type" />
                        </SelectTrigger>
                        <SelectContent className="bg-gray-800 border-gray-700">
                          <SelectItem value="birthday_party">Birthday Party</SelectItem>
                          <SelectItem value="graduation">Graduation Party</SelectItem>
                          <SelectItem value="corporate_event">Corporate Event</SelectItem>
                          <SelectItem value="school_event">School Event</SelectItem>
                          <SelectItem value="community_event">Community Event</SelectItem>
                          <SelectItem value="other">Other</SelectItem>
                        </SelectContent>
                      </Select>
                    </div>
                    
                    <div className="space-y-2">
                      <Label htmlFor="package_interest" className="font-semibold text-gray-300">Rental Interest</Label>
                      <Select value={formData.package_interest} onValueChange={(value) => handleInputChange('package_interest', value)}>
                        <SelectTrigger className="border-2 border-gray-700 bg-gray-800 text-white focus:border-cyan-500 rounded-lg">
                          <SelectValue placeholder="Select rental type" />
                        </SelectTrigger>
                        <SelectContent className="bg-gray-800 border-gray-700">
                          <SelectItem value="bounce_house">Bounce House ($200/day)</SelectItem>
                          <SelectItem value="large_slide">Large Slide ($400/day)</SelectItem>
                          <SelectItem value="jumbo_unit">Jumbo Unit ($500/day)</SelectItem>
                          <SelectItem value="multiple">Multiple Units</SelectItem>
                        </SelectContent>
                      </Select>
                    </div>
                  </div>

                  <div className="space-y-2">
                    <Label htmlFor="location" className="font-semibold text-gray-300">Event Location</Label>
                    <Input
                      id="location"
                      type="text"
                      value={formData.location}
                      onChange={(e) => handleInputChange('location', e.target.value)}
                      className="border-2 border-gray-700 bg-gray-800 text-white focus:border-cyan-500 rounded-lg"
                      placeholder="City or address"
                    />
                  </div>

                  <div className="space-y-2">
                    <Label htmlFor="message" className="font-semibold text-gray-300">Special Requests or Questions</Label>
                    <Textarea
                      id="message"
                      value={formData.message}
                      onChange={(e) => handleInputChange('message', e.target.value)}
                      className="border-2 border-gray-700 bg-gray-800 text-white focus:border-cyan-500 rounded-lg h-24"
                      placeholder="Tell us about your vision..."
                    />
                  </div>

                  <div className="space-y-2">
                    <Label htmlFor="contact_preference" className="font-semibold text-gray-300">Preferred Contact Method</Label>
                    <Select value={formData.contact_preference} onValueChange={(value) => handleInputChange('contact_preference', value)}>
                      <SelectTrigger className="border-2 border-gray-700 bg-gray-800 text-white focus:border-cyan-500 rounded-lg">
                        <SelectValue />
                      </SelectTrigger>
                      <SelectContent className="bg-gray-800 border-gray-700">
                        <SelectItem value="email">Email</SelectItem>
                        <SelectItem value="phone">Phone</SelectItem>
                        <SelectItem value="either">Either</SelectItem>
                      </SelectContent>
                    </Select>
                  </div>

                  <Button 
                    type="submit" 
                    disabled={isSubmitting}
                    className="w-full bg-gradient-to-r from-cyan-500 via-pink-500 to-orange-500 text-white py-4 text-lg font-semibold rounded-full hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300"
                  >
                    {isSubmitting ? (
                      "Sending..."
                    ) : (
                      <>
                        <Send className="mr-2 w-5 h-5" />
                        Get My Free Quote
                      </>
                    )}
                  </Button>
                </form>
              </CardContent>
            </Card>
          </div>

          {/* Contact Information */}
          <div className="space-y-8">
            {/* Quick Contact */}
            <Card className="shadow-xl border border-gray-800 bg-gradient-to-br from-cyan-500 via-pink-500 to-orange-500 text-white">
              <CardContent className="p-8">
                <h3 className="text-2xl font-bold mb-6">Need to Talk Right Now?</h3>
                <div className="space-y-4 mb-6">
                  <div className="flex items-center space-x-3">
                    <Phone className="w-6 h-6" />
                    <div>
                      <p className="font-semibold">555-BOUNCE (555-268-6235)</p>
                      <p className="text-cyan-100 text-sm">Available 7 days a week</p>
                    </div>
                  </div>
                  <div className="flex items-center space-x-3">
                    <Mail className="w-6 h-6" />
                    <div>
                      <p className="font-semibold">info@bouncebrosco.com</p>
                      <p className="text-cyan-100 text-sm">Response within 2 hours</p>
                    </div>
                  </div>
                </div>
                <Button className="w-full bg-white text-cyan-600 hover:bg-gray-100 py-3 font-semibold rounded-full transition-all duration-300">
                  <Phone className="mr-2 w-5 h-5" />
                  Call Now for Instant Quote
                </Button>
              </CardContent>
            </Card>

            {/* Business Hours */}
            <Card className="shadow-xl border border-gray-800 bg-gradient-to-br from-gray-900 to-black">
              <CardContent className="p-8">
                <h3 className="text-xl font-bold text-white mb-4 flex items-center">
                  <Clock className="w-6 h-6 mr-2 text-cyan-400" />
                  Business Hours
                </h3>
                <div className="space-y-2 text-gray-300">
                  <div className="flex justify-between">
                    <span>Monday - Friday</span>
                    <span className="font-semibold">8:00 AM - 8:00 PM</span>
                  </div>
                  <div className="flex justify-between">
                    <span>Saturday</span>
                    <span className="font-semibold">8:00 AM - 6:00 PM</span>
                  </div>
                  <div className="flex justify-between">
                    <span>Sunday</span>
                    <span className="font-semibold">10:00 AM - 4:00 PM</span>
                  </div>
                </div>
              </CardContent>
            </Card>

            {/* Service Areas */}
            <Card className="shadow-xl border border-gray-800 bg-gradient-to-br from-gray-900 to-black">
              <CardContent className="p-8">
                <h3 className="text-xl font-bold text-white mb-4 flex items-center">
                  <MapPin className="w-6 h-6 mr-2 text-pink-400" />
                  Service Areas
                </h3>
                <p className="text-gray-400 mb-4">We proudly serve Hamilton and Boone County, Indiana including:</p>
                <div className="grid grid-cols-2 gap-2 text-gray-300">
                  <div className="flex items-center">
                    <CheckCircle className="w-4 h-4 text-green-500 mr-2" />
                    Carmel
                  </div>
                  <div className="flex items-center">
                    <CheckCircle className="w-4 h-4 text-green-500 mr-2" />
                    Fishers
                  </div>
                  <div className="flex items-center">
                    <CheckCircle className="w-4 h-4 text-green-500 mr-2" />
                    Noblesville
                  </div>
                  <div className="flex items-center">
                    <CheckCircle className="w-4 h-4 text-green-500 mr-2" />
                    Westfield
                  </div>
                  <div className="flex items-center">
                    <CheckCircle className="w-4 h-4 text-green-500 mr-2" />
                    Zionsville
                  </div>
                  <div className="flex items-center">
                    <CheckCircle className="w-4 h-4 text-green-500 mr-2" />
                    Lebanon
                  </div>
                  <div className="flex items-center">
                    <CheckCircle className="w-4 h-4 text-green-500 mr-2" />
                    Cicero
                  </div>
                </div>
                <p className="text-sm text-gray-500 mt-4">
                  Outside our area? We may still be able to help! Additional delivery fees may apply.
                </p>
              </CardContent>
            </Card>

            {/* Why Choose Us */}
            <Card className="shadow-xl border border-gray-800 bg-gradient-to-br from-orange-900/20 to-pink-900/20">
              <CardContent className="p-8">
                <h3 className="text-xl font-bold text-white mb-4 flex items-center">
                  <Heart className="w-6 h-6 mr-2 text-orange-400" />
                  Why Choose Bounce Bros Co?
                </h3>
                <div className="space-y-3">
                  <div className="flex items-center">
                    <Star className="w-5 h-5 text-yellow-500 mr-2" />
                    <span className="text-gray-300">5-star rated & fully insured</span>
                  </div>
                  <div className="flex items-center">
                    <CheckCircle className="w-5 h-5 text-cyan-400 mr-2" />
                    <span className="text-gray-300">Lightning-fast setup & takedown</span>
                  </div>
                  <div className="flex items-center">
                    <Heart className="w-5 h-5 text-pink-400 mr-2" />
                    <span className="text-gray-300">Family-owned & community focused</span>
                  </div>
                </div>
              </CardContent>
            </Card>
          </div>
        </div>
      </div>
    </div>
  );
}
