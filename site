        {children}
      </main>

      {/* Footer */}
      <footer className="bg-black text-white relative overflow-hidden border-t border-gray-800">
        <div className="absolute inset-0 bg-gradient-to-r from-cyan-500/10 via-pink-500/10 to-orange-500/10"></div>
        <div className="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
          <div className="grid grid-cols-1 md:grid-cols-3 gap-8">
            {/* Company Info */}
            <div>
              <div className="flex items-center space-x-3 mb-6">
                <img 
                  src="https://qtrypzzcjebvfcihiynt.supabase.co/storage/v1/object/public/base44-prod/public/68b6fa3b1e80fac9017699c7/19ca7266b_IMG_3558.png"
                  alt="Bounce Bros Co. Logo"
                  className="w-12 h-12"
                />
                <h3 className="text-xl font-bold">Bounce Bros Co.</h3>
              </div>
              <p className="text-gray-400 mb-4">
                Premier inflatable rentals serving Hamilton and Boone County, Indiana. 
                Making your events unforgettable since day one.
              </p>
            </div>

            {/* Contact Info */}
            <div>
              <h3 className="text-lg font-semibold mb-6 text-pink-400">Contact Us</h3>
              <div className="space-y-4">
